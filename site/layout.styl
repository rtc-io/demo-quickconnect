@import 'nib'

remote_size = 80%;

html, body {
    width: 100%;
    height: 100%;
    margin: 0;
}

.container {
	font: 12px Arial, Helvetica;

	width: 100%;
	height: 100%;

	display: flex;	
	flex-direction: column;
}

.remote {
	display: flex;
	flex-direction: row;
	justify-content: space-between;

	video {
		flex: 1 1 100%;
		width: 100%;
		max-height: 90%;
	}
}

.local {
	display: flex;
	position: absolute;
	float: left;
	bottom: 0;
	height: 15%;
	width: 100%;

	video {
		margin: 5px 0;
		height: 100%;
	}
}

.layout {
	display: flex;
	flex-direction: column;
	flex: 4 4 100%;
	height: 100%;
	width: 100%;

	input[type="text"] {
		font-family: monospace;
		padding: 5px;
	}
}

.layout-hz {
	flex-direction: row;
}

.chat {
	display: none;
	flex-direction: column;
	flex: 1 1 30%;
	padding: 0px 10px;
	background: #f4f4f4;
}

.open {
	display: flex;
}

.message-list {
	list-style: none;
	margin: 0px;
	padding: 0px;

	> li {
		color: black;
		padding: 1px 2px;

		&.local-chat {
			color: green;
		}
	}
}